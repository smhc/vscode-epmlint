{
  "name": "vscode-epmlint",
  "displayName": "Epmlint",
  "description": "Epmlint for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "smhc",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smhc/vscode-epmlint.git"
  },
  "license": "MIT",
  "activationEvents": [
    "onLanguage:epm"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Epmlint Configuration",
      "properties": {
        "epmlint.executablePath": {
          "type": "string",
          "default": "epmlint",
          "description": "Path to epmlint executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "execa": "^0.10.0"
  }
}
